<div class="container">
  <div class="row">
    <div class="col s12 m8 offset-m2">
      <br><h5>Inicia sesi√≥n:</h5>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>  
        <div class="row">
          <div class="input-field col s12 ">
            <%= f.label :usuario %>
            <%= f.text_field :usuario, autofocus: true %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
           <%= f.label :email %>
           <%= f.email_field :email, autofocus: true %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: "off" %>
          </div>
        </div>
        <div class="row">
           <% if devise_mapping.rememberable? -%>
              <div class="imput-field col s12">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
           <% end -%>
        </div>  
        <div class="row">
          <div class="">
            <%= f.submit "Iniciar sesion", class: "btn green darken-4"%>
          </div>
        </div>
        <div class="row">
          <div class="col s-12">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>



