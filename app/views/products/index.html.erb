<div class="container">
  <div class="row">
    <div class="col s12">
       <p id="notice"><%= notice %></p>
       <h2>Lista de Productos</h2>
    </div> 
    <% @products.each do |product| %> 
        <div class="col s3">
          <div class="card small">
            <div class="card-image col s10 offset-s1 ">
              <%= image_tag product.cover.url, class: "responsive-img" %> 
            </div>
            <div class="card-content card-padding col s10">
              <center><h5 class="blue-text text-darken-2"><%= link_to product.nombre, product  %></h5></center> 
              Tamaño: <%= product.tamaño %> <br>  
              <div class="orange-text text-darken-3">
                 <h5>S/. <%= product.pre_venta %><span class="badge new"> <%= product.stock %></span></h5>
              </div> 
              
            </div>
         
          </div>
        </div>   
    <% end %> 
    <div class="col s12">
       <br>
       <%= link_to 'Nuevo Producto', new_product_path %>
    </div>  
  </div>
</div>





     
        
      
    



